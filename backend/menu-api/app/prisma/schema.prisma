// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drink {
  id        String  @id
  name      String  @unique
  price     Int
  calories  Int
}

model FoodItem {
  id          String  @id
  name        String  @unique
  price       Int
  calories    Int
  allergies   Allergies[]
}

model Allergies {
  id          String @id
  name        String @unique
  foodItems   FoodItem[]
}